
<% if @current_user.present?%>
    <div id="constraintForm" style="padding: 10px;text-align:center;font-size:25px;">
      <span>Welcome to Veternry Practice</span>
    </div>
<% else%>
    <div id="constraintForm" style="padding: 10px;">
      <table id="userFormDetails" class="userdetails gridtable overRide"  border="0" cellspacing="0" cellpadding="1" width="400px">
        <tr>
          <td width="55px"><label>Username</label><span class="fabText">*</span></td>
          <td width="175px">
            <input class="textBox" maxlength="50" id="username" size="50" type="text">
          </td>
        </tr>

        <tr>
          <td width="55px"><label>Password</label><span class="fabText">*</span></td>
          <td width="175px"><input class="textBox" maxlength="50" id="password" size="50" type="password"></td>
        </tr>

        <tr>
          <td align="center" width="75px" colspan="2"><input id="btnLogin" class="submit fabmin-btn-cls  noUserSelect borderR5 noShadow" name="commit" type="submit" value="Login"></td>
        </tr>
      </table>
    </div>
<% end%>